generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @map("_id") @id @default(uuid())
  name            String?
  username        String?   @unique
  bio             String?
  email           String?   @unique
  emailVerified   DateTime?
  image           String?
  coverImage      String?
  profileImage    String?
  hashedPassword  String?
  location        String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  payments        Payment[]
}

model Product {
  id          String     @map("_id") @id @default(uuid())
  name        String
  price       String
  rating      Float     @default(0)
  href        String
  imageSrc    String
  colors      Color[]
  sizes       Size[]
  payments    Payment[]
}

model Color {
  id            String       @map("_id") @id @default(uuid())
  name          String
  class         String
  selectedClass String
  productId     String
  product       Product  @relation(fields: [productId], references: [id])
}

model Size {
  id        String      @map("_id") @id @default(uuid())
  name      String
  inStock   Boolean
  productId String
  product   Product  @relation(fields: [productId], references: [id])
}


model Payment {
  id            String     @map("_id") @id @default(uuid())
  amount        Float
  currency      String
  paymentMethod String
  status        String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  productId     String
  product       Product   @relation(fields: [productId], references: [id])
}
